#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int main() {
    int C,K,N;
    long temp,total;
    scanf("%d",&C);
    scanf("%d",&K);
    scanf("%d",&N);
    temp=pow(K,N);
    total=C*temp;
    printf("%ld",total);
}
